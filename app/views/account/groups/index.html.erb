<div class="col-md-12">
  <h2 class="text-center">My Groups</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Posts Count</th>
        <th>Last Update</th>
      </tr>
    </thead>

    <tbody>
      <%@groups.each do |group| %>
      <tr>
        <td>#</td>
        <td><%=link_to(group.title,group_path(group))%></td>
        <td><%=render_group_description(group)%></td>
        <td><%=group.posts.count%></td>
        <td><%=group.updated_at%></td>
        <td><%=link_to("Edit",edit_group_path(group),class:"btn btn-sm btn-default")%></td>
        <td><%=link_to("Delete",group_path(group),class:"btn btn-sm btn-default",method: :delete, data:{confirm:"Are you sure?"})%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
